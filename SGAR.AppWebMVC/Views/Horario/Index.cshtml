@model IEnumerable<SGAR.AppWebMVC.Models.Horario>

@{
    ViewData["Title"] = "Lista de Horarios";
}

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<p>
    <a href="@Url.Action("Calendar", "Horario")" class="btn btn-primary">Ver Calendario Completo</a>
</p>



@if (TempData["AlertMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: '¡Éxito!',
                text: '@TempData["AlertMessage"]',
                icon: 'success',
                confirmButtonText: 'Aceptar'
            });
        });
    </script>
}

<p>
    <a onclick="showInPopup('@Url.Action("Create", "Horario", new { id = 0 }, Context.Request.Scheme)' ,
    '')" class="btn btn-sm btn-primary text-white"><i class="oi oi-plus"></i> Agregar un horario</a>
</p>

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Lista de Horarios</h5>
        </div>
        <div class="card-body">
            <table id="horario" class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                     @*    <th>@Html.DisplayNameFor(model => model.)</th> *@
                        <th>@Html.DisplayNameFor(model => model.HoraEntrada)</th>
                        <th>@Html.DisplayNameFor(model => model.HoraSalida)</th>
                        <th>@Html.DisplayNameFor(model => model.Dia)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td>@Html.DisplayFor(modelItem => item.Titulo)</td> *@
                            <td>@Html.DisplayFor(modelItem => item.HoraEntrada)</td>
                            <td>@Html.DisplayFor(modelItem => item.HoraSalida)</td>
                            <td>@Html.DisplayFor(modelItem => item.Dia)</td>
                            <td>
                                <a onclick="showInPopup('@Url.Action("Edit", "Horario", new { id = item.Id }, Context.Request.Scheme)' , '')" class="btn btn-outline-warning btn-sm"><i class="oi oi-pencil"></i> </a>
                                <button data-id="@item.Id" class="btn btn-outline-danger btn-sm deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog">
                                    <i class="oi oi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_MostrarModal" />
<partial name="_ModalEliminar" />

@section Scripts {
    <script src="~/js/showmodal.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#horario').DataTable({
                "language": {
                    url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
            });
        });
    </script>
    <script>
        sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Horario/Delete/', false);
    </script>
}
