@model IEnumerable<SGAR.AppWebMVC.Models.Horario>

@{
    ViewData["Title"] = "Gestión de Horarios";
}

<h2>Gestión de Horarios</h2>

<div class="d-flex justify-content-between mb-3">
    <a href="@Url.Action("FullCalendar", "Horario")" class="btn btn-info">📅 Ver Calendario</a>
    <a href="@Url.Action("Create", "Horario")" class="btn btn-success">➕ Crear Horario</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Operador</th>
            <th>Zona</th>
            <th>Hora Entrada</th>
            <th>Hora Salida</th>
            
            <th>Turno</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var horario in Model)
        {
            <tr>
                <td>@horario.IdOperadorNavigation.Nombre</td>
                <td>@horario.IdZonaNavigation.Nombre</td>
                <td>@horario.HoraEntrada</td>
                <td>@horario.HoraSalida</td>
              
                <td>@(horario.Turno == 1 ? "Matutino" : "Vespertino")</td>
                <td>
                    <a href="@Url.Action("Edit", "Horario", new { id = horario.Id })" class="btn btn-success"> Editar</a>
                    <a href="@Url.Action("Details", "Horario", new { id = horario.Id })" class="btn btn-secondary">Ver</a>
                    <a href="@Url.Action("Delete", "Horario", new { id = horario.Id })" class="btn btn-danger"> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string ConvertirDias(string diasBinarios)
    {
        var dias = new[] { "L", "M", "Mi", "J", "V", "S", "D" };
        var resultado = new List<string>();

        for (int i = 0; i < diasBinarios.Length; i++)
        {
            if (diasBinarios[i] == '1') resultado.Add(dias[i]);
        }

        return string.Join(", ", resultado);
    }
}
