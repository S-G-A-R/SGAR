@model SGAR.AppWebMVC.Models.Horario

@{
    ViewData["Title"] = "Editar Horario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="HoraEntrada">Hora de Entrada</label>
        <input type="time" class="form-control" id="HoraEntrada" name="HoraEntrada" value="@Model.HoraEntrada" required />
    </div>

    <div class="form-group">
        <label for="HoraSalida">Hora de Salida</label>
        <input type="time" class="form-control" id="HoraSalida" name="HoraSalida" value="@Model.HoraSalida" required />
    </div>

    <div class="form-group">
        <label for="Dia">Días</label>
        <input type="text" class="form-control" id="Dia" name="Dia" value="@Model.Dia" required />
        <!-- Aquí puedes usar una interfaz de tipo checkbox o un campo que se ajuste a tu formato de días binarios -->
    </div>

    <div class="form-group">
        <label for="Turno">Turno</label>
        <select class="form-control" id="Turno" name="Turno">
            <option value="1" @@(Model.Turno == 1 ? "selected" : "")>Matutino</option>
            <option value="2" @@(Model.Turno == 2 ? "selected" : "")>Vespertino</option>
        </select>
    </div>

    <div class="form-group">
        <label for="IdOperador">Operador</label>
        <select class="form-control" id="IdOperador" name="IdOperador">
            @foreach (var operador in ViewBag.Operadores)
            {
                <option value="@operador.Id" @@(operador.Id == Model.IdOperador ? "selected" : "")>@operador.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="IdZona">Zona</label>
        <select class="form-control" id="IdZona" name="IdZona">
            @foreach (var zona in ViewBag.Zonas)
            {
                <option value="@zona.Id" @@(zona.Id == Model.IdZona ? "selected" : "")>@zona.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
