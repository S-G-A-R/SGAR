@model SGAR.AppWebMVC.Models.Horario

@{
    ViewData["Title"] = "Editar Horario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="HoraEntrada" class="required">Hora de Entrada</label>
        <input type="time" class="form-control" id="HoraEntrada" name="HoraEntrada" value="@Model.HoraEntrada" required />
    </div>

    <div class="form-group">
        <label for="HoraSalida" class="required">Hora de Salida</label>
        <input type="time" class="form-control" id="HoraSalida" name="HoraSalida" value="@Model.HoraSalida" required />
    </div>

    <div class="form-group">
        <label for="Dia" class="required">Días</label>
        <input type="text" class="form-control" id="Dia" name="Dia" value="@Model.Dia" required />
        <!-- Aquí puedes usar una interfaz de tipo checkbox o un campo que se ajuste a tu formato de días binarios -->
    </div>

    <div class="form-group">
        <label for="Turno" class="required">Turno</label>
        <select class="form-control" id="Turno" name="Turno">
            <option value="1">Matutino</option>
            <option value="2">Vespertino</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="IdOperador" class="control-label required"></label>
        <select asp-for="IdOperador" class="form-control" asp-items="ViewBag.Operadores"></select>
    </div>

    <div class="form-group">
        <label for="IdDistrito">Distrito</label>
        <select id="idDistrito" name="IdDistrito" class="form-control" asp-items="ViewBag.Distritos"></select>
    </div>

    <div class="form-group">
        <label for="IdZona" class="required">Zona</label>
        <select id="zonas" name="IdZona" asp-for="IdZona" asp-items="ViewBag.Distritos" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
