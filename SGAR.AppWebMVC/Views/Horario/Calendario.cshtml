@{
    ViewData["Title"] = "Calendario de Horarios";
}

<h1>@ViewData["Title"]</h1>

<div id="calendar"></div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#calendar').fullCalendar({
                events: '/Horario/ObtenerEventos', // Ruta a la acción ObtenerEventos
                eventRender: function(event, element) {
                    element.attr('title', event.title); // Opcional: agregar tooltips o detalles extra
                },
                editable: true, // Permite arrastrar los eventos
                droppable: true // Permite soltar eventos en el calendario (opcional)
            });
        });
    </script>
}


