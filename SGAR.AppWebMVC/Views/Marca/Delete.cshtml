@model SGAR.AppWebMVC.Models.Marca

@{
    ViewData["Title"] = "Delete";
}

<h1><i class="bi bi-trash-fill me-3"></i>@ViewData["Title"]</h1>

<h3>Confirmar eliminación?</h3>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfFabrication)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfFabrication)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info"><i class="bi bi-arrow-90deg-left me-1"></i> Volver</a>
    </form>
</div>
