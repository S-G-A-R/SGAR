@model SGAR.AppWebMVC.Models.Supervisor

@{
    ViewData["Title"] = "Delete";
}
<div class="floating-box" style="background-color:firebrick; padding: 10px; border-radius: 5px;">
        <h1><i class="bi bi-trash-fill me-3 icono-rojo"></i></h1>
        <h3 style="color:white;">¿Estás seguro de que quieres eliminar este supervisor?</h3>
  
    <div>
        
        <dl class="row " style="background-color: white;">
              
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CorreoPersonal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CorreoPersonal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dui)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dui)
            </dd>
            <div class="row m-2" id="divReferentesSu">
                <partial name="_ReferentesSupervisor" model="Model.ReferentesSupervisores" />
            </div>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Foto)
            </dt>
            <dd class="col-sm-12" style="display: flex; justify-content: center; align-items: center;">
                @if (Model.Foto != null && Model.Foto.Length > 0)
                {
                    string base64Image = Convert.ToBase64String(Model.Foto);
                    string imageUrl = $"data:image/png;base64,{base64Image}";
                    <img src="@imageUrl" alt="Foto del supervisor" style="max-width: 100%; height: auto; max-height: 200px;" />
                }
                else
                {
                    <span style="text-align: center; width: 100%;">No hay foto disponible.</span>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Codigo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Codigo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CorreoLaboral)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CorreoLaboral)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TelefonoLaboral)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TelefonoLaboral)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdAlcaldiaNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdAlcaldiaNavigation.Correo)
            </dd>
            <div style="background-color: white; padding: 10px; text-align: center;">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-danger "><i></i> cancelar</a>
                </form>
            </div>      
        </dl>
    </div>
</div>

<style>
    .f.floating-box {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border: 3px solid firebrick;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 900px;
        height: auto;
        max-height: 80vh;
        margin: 0 auto;
        position: fixed;
        top: 10%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        overflow-y: auto;
    }

    .floating-box img {
        max-width: 100%;
        height: auto;
    }

    .floating-box table {
        table-layout: fixed;
        width: 100%;
    }

    .floating-box td, .floating-box th {
        width: 25%;
        overflow-wrap: break-word;
    }

    .floating-box p, .floating-box div {
        overflow-wrap: break-word;
    }

        

    .i{
        background-color: red; /* Cambia "red" al color que prefieras */
        padding: 10px;
      
       
    }

    .icono-rojo {
        color: white; /* Cambia el color del icono a blanco */
    }
    
        .floating-box h1,
        .floating-box h3,
        .floating-box h4,
        .floating-box dt,
        .floating-box dd,
        .floating-box span,
        .floating-box a,
        .floating-box input[type="submit"] {
            color: #333; /* Color de texto oscuro para resaltar */
            font-weight: 500; /* Peso de fuente para resaltar */
        }

        .floating-box .btn {
            font-weight: bold; /* Resalta los botones */
        }
</style>

@section Scripts {
    <script>
        $(function () {
            $("*[data-create]").hide();
            $("*[data-edit]").hide();
            $("*[data-disabled]").attr("disabled", "disabled");
        });
    </script>
}