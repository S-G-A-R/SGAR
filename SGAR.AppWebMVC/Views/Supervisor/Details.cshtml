@model SGAR.AppWebMVC.Models.Supervisor

@{
    ViewData["Title"] = "Details";
}
<div class="container d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2" style="font-size: 1.5rem;"></i>
            <h5 class="card-title mb-0">Detalles del Supervisor</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CorreoPersonal)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CorreoPersonal)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Dui)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dui)
                </dd>

                <div class="row m-2">
                    <partial name="_ReferentesSupervisor" model="Model.ReferentesSupervisores" />
                </div>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-8">
                    @if (Model.Foto != null && Model.Foto.Length > 0)
                    {
                        string base64Image = Convert.ToBase64String(Model.Foto);
                        string imageUrl = $"data:image/png;base64,{base64Image}";
                        <img src="@imageUrl" alt="Foto del supervisor" style="max-width: 150px; max-height: 150px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <span>No hay foto disponible.</span>
                    }
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CorreoLaboral)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CorreoLaboral)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.TelefonoLaboral)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TelefonoLaboral)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IdAlcaldiaNavigation)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IdAlcaldiaNavigation.Correo)
                </dd>
            </dl>
            <div class="mt-3 d-flex justify-content-center gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success"><i class="bi bi-pen me-2"></i> Editar</a>
                <a asp-action="Index" class="btn btn-danger "><i></i> Cancelar</a>
            </div>
           
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(function () {
            $("*[data-create]").hide();
            $("*[data-edit]").hide();
            $("*[data-disabled]").attr("disabled","disabled");
        });
    </script>
}
